<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="wizard-sample"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <fileSets>
    <fileSet encoding="UTF-8">
      <directory></directory>
      <includes>
        <include>build.include</include>
        <include>build.sh</include>
        <include>codenvy-run.sh</include>
        <include>codenvy-stop.sh</include>
        <include>LICENSE</include>
        <include>.mvn/*</include>
      </includes>
    </fileSet>
  </fileSets>
  <modules>
    <module id="plugin" dir="plugins" name="plugin">
      <modules>
        <module id="__rootArtifactId__" dir="__rootArtifactId__" name="__rootArtifactId__">
          <modules>
            <module id="plugin-wizard-shared" dir="__rootArtifactId__-shared" name="plugin-wizard-shared">
              <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                  <directory>src/main/java</directory>
                  <includes>
                    <include>**/*.java</include>
                  </includes>
                </fileSet>
              </fileSets>
            </module>
            <module id="plugin-wizard-server" dir="__rootArtifactId__-server" name="plugin-wizard-server">
              <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                  <directory>src/main/java</directory>
                  <includes>
                    <include>**/*.java</include>
                  </includes>
                </fileSet>
              </fileSets>
            </module>
            <module id="plugin-wizard-ide" dir="__rootArtifactId__-ide" name="plugin-wizard-ide">
              <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                  <directory>src/main/java</directory>
                  <includes>
                    <include>**/*.java</include>
                    <include>**/*.xml</include>
                  </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                  <directory>src/main/resources</directory>
                  <includes>
                    <include>**/*.xml</include>
                    <include>**/*.properties</include>
                  </includes>
                </fileSet>
                <fileSet encoding="UTF-8">
                  <directory>src/main/resources</directory>
                  <includes>
                    <include>**/*.svg</include>
                  </includes>
                </fileSet>
              </fileSets>
            </module>
          </modules>
        </module>
      </modules>
    </module>
    <module id="plugin-wizard-assembly-parent" dir="assembly" name="plugin-wizard-assembly-parent">
      <modules>
        <module id="assembly-wsagent-war" dir="assembly-wsagent-war" name="assembly-wsagent-war" />
        <module id="assembly-wsagent-server" dir="assembly-wsagent-server" name="assembly-wsagent-server">
          <fileSets>
            <fileSet filtered="true" encoding="UTF-8">
              <directory>src/assembly</directory>
              <includes>
                <include>**/*.xml</include>
              </includes>
            </fileSet>
          </fileSets>
        </module>
        <module id="assembly-ide-war" dir="assembly-ide-war" name="assembly-ide-war">
          <fileSets>
            <fileSet filtered="true" encoding="UTF-8">
              <directory>src/main/resources</directory>
              <includes>
                <include>**/*.xml</include>
              </includes>
            </fileSet>
            <fileSet filtered="true" encoding="UTF-8">
              <directory>src/assembly</directory>
              <includes>
                <include>**/*.xml</include>
              </includes>
            </fileSet>
          </fileSets>
        </module>
        <module id="assembly-main" dir="assembly-main" name="assembly-main">
          <fileSets>
            <fileSet filtered="true" encoding="UTF-8">
              <directory>src/assembly</directory>
              <includes>
                <include>**/*.xml</include>
              </includes>
            </fileSet>
          </fileSets>
        </module>
      </modules>
    </module>
  </modules>
</archetype-descriptor>
