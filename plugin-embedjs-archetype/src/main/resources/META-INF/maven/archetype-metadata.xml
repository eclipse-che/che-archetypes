<archetype-descriptor
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
        xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <fileSets>
        <fileSet filtered="false" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>LICENSE</include>
                <include>.mvn/*</include>
            </includes>
        </fileSet>
    </fileSets>
    <modules>
        <module id="plugin" dir="plugins" name="plugin">
            <modules>
                <module id="__rootArtifactId__" dir="__rootArtifactId__" name="__rootArtifactId__">
                    <modules>
                        <module id="ide" dir="__rootArtifactId__-ide" name="ide">
                            <fileSets>
                                <fileSet filtered="true" encoding="UTF-8">
                                    <directory>src/main/java</directory>
                                    <includes>
                                        <include>**/*.java</include>
                                        <include>**/*.xml</include>
                                    </includes>
                                </fileSet>
                                <fileSet filtered="true" encoding="UTF-8">
                                    <directory>src/main/resources</directory>
                                    <includes>
                                        <include>**/*.svg</include>
                                        <include>**/*.xml</include>
                                        <include>**/*.js</include>
                                    </includes>
                                </fileSet>
                            </fileSets>
                        </module>
                    </modules>
                </module>
            </modules>
        </module>
        <module id="plugin-embedjs-assembly-parent" dir="assembly" name="plugin-embedjs-assembly-parent">
            <modules>
                <module id="assembly-ide-war" dir="assembly-ide-war" name="assembly-ide-war">
                    <fileSets>
                        <fileSet filtered="true" encoding="UTF-8">
                            <directory>src/main/resources</directory>
                            <includes>
                                <include>**/*.xml</include>
                            </includes>
                        </fileSet>
                    </fileSets>
                </module>
                <module id="assembly-main" dir="assembly-main" name="assembly-main">
                    <fileSets>
                        <fileSet filtered="true" encoding="UTF-8">
                            <directory>src/assembly</directory>
                            <includes>
                                <include>**/*.xml</include>
                            </includes>
                        </fileSet>
                    </fileSets>
                </module>
            </modules>
        </module>
    </modules>
</archetype-descriptor>
